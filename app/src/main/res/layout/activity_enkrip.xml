<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_enkrip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan kode enkripsi"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="19sp"/>
        <EditText
            android:id="@+id/etEnkrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan r"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:inputType="number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:text="0."/>
            <EditText
                android:id="@+id/etKode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan X0"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="number"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/etKode3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan K"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:inputType="number"/>
        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="setuju"
            android:padding="15dp"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:id="@+id/btnAdd_enkrip"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/bg_button"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>
